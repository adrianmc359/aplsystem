<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <context:component-scan base-package="org.amc" />

   <bean id="dataSourceCache" class="org.amc.servlet.dao.DataSourceCache">
  	<constructor-arg type="java.lang.String" value="jdbc/APLSystem"/>
  </bean>
  <bean id="dataSource" factory-bean="dataSourceCache" factory-method="getDataSource"/>

</beans>


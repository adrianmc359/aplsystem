<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
 <context:component-scan base-package="org.amc" />
 <bean id="APLProcessServlet" class="org.amc.servlet.APLProcessServlet">
 	<property name="processActionFactory" ref="processActionFactory"/>
 </bean>
 
 <bean id="processActionFactory" class="org.amc.servlet.action.ProcessActionFactoryImpl">
  	<constructor-arg ref="mouldingProcessDAO" />
  </bean>
          
    <bean id="mouldingProcessDAO" 
    class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
        <property name="jndiName" value="MouldingProcessDAOBeanRemote"/>
    	<property name="businessInterface" value="org.amc.dao.MouldingProcessDAOBeanRemote"/>
    	<property name="jndiEnvironment">
			     <props>
			       <prop key="java.naming.factory.initial">org.apache.openejb.client.RemoteInitialContextFactory</prop>
			       <prop key="java.naming.provider.url">ejbd://127.0.0.1:4201</prop>
			     </props>
		</property>
    </bean>
 </beans>
